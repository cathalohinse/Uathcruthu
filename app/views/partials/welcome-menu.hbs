<div style="background-color: #877EB4" class="uk-width-2-3@m  uk-card uk-card-default uk-padding-small uk-visible@m">
    <div style="color: black" class="uk-grid">
        <div class="uk-width-1-6@m">
            <img src="/images/ITPL.png" width="90" alt="img" />
        </div>
        <div class="uk-width-expand@m uk-text-left">
            <div class="title">
                {{title}}
            </div>
            <div class="uk-text-muted uk-text-small">
                <div style="color: black">
                    {{subTitle}}
                </div>
            </div>
        </div>

        <div class="uk-card uk-card-small uk-text-center uk-padding-remove">
            <ul class="uk-iconnav uk-margin-left">

                <a target="_blank" href="https://github.com/cathalohinse/Uathcruthu">
                    <i class="fab fa-github fa-3x" style="color:#653DC2" title="Source Repository" pos="bottom" uk-tooltip></i>
                    <div class="uk-width-expand@m uk-text-left">
                        <div style="font-size:xx-small" class="uk-text-muted uk-text-center">Uathcruth√∫</div>
                    </div>
                </a>

                <a href="/signup" class="uk-card uk-card-small uk-text-center uk-padding-remove">
                    <i class="fas fa-user-cog fa-3x" style="color:rgb(63, 160, 155)" title="Sign up" pos="bottom" uk-tooltip></i>
                    <div class="uk-width-expand@m uk-text-left">
                        <div style="font-size:xx-small" class="uk-text-muted uk-text-center">Signup</div>
                    </div>
                </a>

                <a href="/login" class="uk-card uk-card-small uk-text-center uk-padding-remove">
                    <i class="fas fa-user-edit fa-3x" style="color:green" title="Log in" pos="bottom" uk-tooltip></i>
                    <div class="uk-width-expand@m uk-text-left">
                        <div style="font-size:xx-small" class="uk-text-muted uk-text-center">Login</div>
                    </div>
                </a>

            </ul>
        </div>

    </div>
</div>
