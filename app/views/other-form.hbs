<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small uk-grid">
    {{> welcome-menu title="Uathcruthú" subTitle="Showcase Selection" }}
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center uk-grid">
        <div class="uk-width-expand@m">
            <h1 class="uk-heading-small">Eile</h1>
        </div>
    </div>
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center uk-grid">
        <div class="uk-width-expand@m">
            <div class="uk-grid">
                <div class="uk-width-1-2 uk-grid-margin">
                    <div style="background-color: #877EB4" class="uk-margin uk-margin-auto uk-card uk-card-default uk-card-small uk-card-body uk-box-shadow-large">
                        <table style="color: black" class="uk-table">
                            <div style="color: black" class="uk-text-left"><strong>List of Students</strong></div>
                            <thead>
                            <th style="color: black"><strong>Student</strong></th>
                            <th style="color: black"><strong>Project Type</strong></th>
                            </thead>
                            <tbody class="uk-text-left">
                            {{#each submissions}}
                            {{#if projectTypeOther}}
                                <tr>
                                    <td>
                                        <div class="uk-width-1-2 uk-grid-margin">
                                            <a href="./handbooks/{{firstName}}{{lastName}}.pdf" target=”_blank” class="uk-card uk-card-small uk-text-center uk-padding-remove">
                                                <div style="color: black" class="uk-text-left">{{firstName}} {{lastName}}</div>
                                            </a>
                                        </div>
                                    </td>

                                    <td>
                                        <form action="/update-submission/{{_id}}" method="POST" enctype="multipart/form-data">
                                            <div class="uk-inline uk-width-1-1">
                                                <span class="uk-form-icon" uk-icon="icon: pencil"></span>
                                                <input class="uk-input uk-form-small" id="projectType" type="text" name="projectType" placeholder="{{projectType}}"/>
                                            </div>

                                            <div class="uk-margin">
                                                <button style="background-color: #653DC2" class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Submit</button>
                                            </div>

                                        </form>
                                    </td>
                                </tr>
                            {{/if}}
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{> error }}
        </div>
    </div>
</div>