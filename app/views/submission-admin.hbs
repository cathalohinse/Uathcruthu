<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> welcome-menu title="Uathcruthú" subTitle="Submissions List" }}
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
        <div class="uk-width-expand@m">
            <h1 class="uk-heading-small">Tionscadal Uathcruthú</h1>
        </div>
    </div>
</div>

    <div class="uk-container uk-margin">
        <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
            <div class="uk-width-expand@m">
                {{> submission-admin-details}}
            </div>
        </div>
    </div>

    <div class="uk-container uk-margin">
        <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
            <div class="uk-width-expand@m">
                <div class="uk-width-2-2 uk-grid-margin-small">
                    <div style="background-color: #877EB4" class="uk-margin-auto uk-card uk-card-default uk-card-small uk-card-body uk-box-shadow-large">
                        <input style="background-color: #653DC2" class="submit uk-button uk-button-primary uk-button-large uk-width-1-1"
                               type="button" onclick="location.href='/create-pdf/{{user._id}}';" value="Create PDF"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> error }}